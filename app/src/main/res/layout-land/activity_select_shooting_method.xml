<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_shooting_method"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.clipline.clwebwrapperapplication.SelectShootingMethodActivity">

    <RelativeLayout
        android:id="@+id/relativeLayoutHeader"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="#61B5Ab"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00_ダミーの文字列です"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="36sp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal"
            android:id="@+id/textViewToDoTitle"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
            android:background="#61B5Ab"
            android:id="@+id/imageButtonTodoClose"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:background="#61B5Ab"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp"
            android:id="@+id/imageButtonBack"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutBody"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_above="@+id/relativeLayoutBottom"
        android:layout_below="@+id/relativeLayoutHeader"
        android:layout_centerInParent="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="動画を撮影する"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="120dp"
            android:textSize="12sp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:id="@+id/textViewTakeMovie" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写真を撮る"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="60dp"
            android:layout_marginTop="120dp"
            android:textSize="12sp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:id="@+id/textViewTakePicture" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="動画ファイルを選ぶ"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="180dp"
            android:textSize="12sp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:id="@+id/textViewSelectMovie" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="画像ファイルを選ぶ"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="180dp"
            android:textSize="12sp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:id="@+id/textViewSelectPicture" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutFooter"
        android:layout_height="64dp"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:background="#E8E8E8"
        >

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/ic_sample_svg"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="92dp"
            android:layout_height="16dp"
            android:text="撮る"
            android:layout_toRightOf="@+id/imageButton2"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:textColor="#000000"
            android:textStyle="normal"
            />

        <Button
            android:id="@+id/buttonToCompare"
            android:text="見比べる"
            android:enabled="false"
            android:layout_width="92dp"
            android:layout_height="64dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="16dp"
            />

    </RelativeLayout>

</RelativeLayout>
