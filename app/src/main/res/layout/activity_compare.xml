<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_compare"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    tools:context="jp.clipline.clandroid.CompareActivity">

    <RelativeLayout
        android:id="@+id/relativeLayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:background="#61B5Ab">

        <TextView
            android:id="@+id/textViewToDoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toEndOf="@+id/imageButtonBack"
            android:text="@string/title_activity_select_shooting_method"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/border_color_gray"
            android:gravity="center"
            android:text="@string/select_shooting_method_submit"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/imageButtonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="#61B5Ab"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

    </RelativeLayout>

    <View
        android:id="@+id/centerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/linearLayoutStatus"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/relativeLayoutHeader"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:weightSum="2.5">

        <jp.clipline.clandroid.view.StatusView
            android:id="@+id/statusView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5" />

        <jp.clipline.clandroid.view.StatusView
            android:id="@+id/statusResport"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <jp.clipline.clandroid.view.StatusView
            android:id="@+id/statusCheck"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayoutBottom"
        android:layout_below="@+id/linearLayoutStatus"
        android:paddingBottom="300dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_layout"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/relativeLayoutPreviewRight"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:focusable="true">

                <jp.clipline.clandroid.view.FullVideo
                    android:id="@+id/videoViewContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="1dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutPreviewLeft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#FFFFFF">


                <WebView
                    android:id="@+id/webViewMine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:foregroundGravity="center"
                    android:visibility="gone" />

                <jp.clipline.clandroid.view.FullVideo
                    android:id="@+id/videoViewMine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:foregroundGravity="center"
                    android:visibility="gone" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/border_color_white"
                android:focusable="true">

                <WebView
                    android:id="@+id/webViewContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="1dp"
                    android:foregroundGravity="center"
                    android:visibility="gone" />

            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/linearLayout2"
            android:layout_alignParentStart="true"
            android:background="#FFF"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/pos_seekBar_content"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginLeft="-20dp"
                android:layout_marginRight="-20dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_style"
                android:thumb="@null" />

            <SeekBar
                android:id="@+id/pos_seekBar_mine"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginLeft="-20dp"
                android:layout_marginRight="-20dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_style"
                android:thumb="@null" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/left_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/pause_img_content"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="16dp"
                        android:src="@drawable/video_start_style" />

                    <ImageView
                        android:id="@+id/pause_img_mine"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="16dp"
                        android:src="@drawable/video_start_style" />

                    <TextView
                        android:id="@+id/current_time_tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:text="00:00"
                        android:textColor="@color/dark_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/current_time_tv_mine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:text="00:00"
                        android:textColor="@color/dark_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="/"
                        android:textColor="@color/dark_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/total_time_tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="00:00"
                        android:textColor="@color/dark_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/total_time_tv_mine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="00:00"
                        android:textColor="@color/dark_gray"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/left_layout"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewSwitch"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/icon_switch" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="5dp"
                        android:background="#1E1E1E" />

                    <ImageView
                        android:id="@+id/change_screen"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/big_screen_df" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/icon_delete"
                android:gravity="center" />

            <TextView
                android:id="@+id/backScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="@string/try_again"

                />

            <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:visibility="gone">-->

            <!--<Button-->
            <!--android:id="@+id/buttonSwitch"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginLeft="@dimen/margin_left"-->
            <!--android:text="@string/compare_switch_video" />-->

            <!--<Button-->
            <!--android:id="@+id/buttonStartAllVideo"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginRight="@dimen/margin_right"-->
            <!--android:background="#33CC66"-->
            <!--android:text="@string/compare_start_video"-->
            <!--android:textColor="#FFFFFF" />-->
            <!--</RelativeLayout>-->
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="250dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="250dp"
            android:background="@android:color/white">


            <ImageView
                android:id="@+id/imageViewStatusSubmit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/textViewUpload"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="55dp" />

            <TextView
                android:id="@+id/textViewUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout5"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:text="@string/report_sent"
                android:textColor="#000"
                android:textSize="35sp" />

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:indeterminate="true" />

                <View
                    android:id="@+id/viewProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/textViewError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="27dp"
                android:gravity="center"
                android:text="@string/error_submit"
                android:textSize="15sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonReportSentInputComment"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/border_color_gray"
                    android:text="@string/report_sent_input_comment"
                    android:textColor="#808080"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/buttonReportSentRetry"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/border_color_gray"
                    android:text="@string/report_sent_retry"
                    android:textColor="#808080"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/buttonReportSentClose"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/border_color_gray"
                    android:text="@string/report_sent_back"
                    android:textColor="#808080"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
