<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_compare"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.clipline.clandroid.CompareActivity">

    <RelativeLayout
        android:id="@+id/relativeLayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:background="#61B5Ab">

        <TextView
            android:id="@+id/textViewToDoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_centerVertical="true"
            android:text="@string/title_activity_compare"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="normal" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="#61B5Ab"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <ImageButton
            android:id="@+id/imageButtonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="#61B5Ab"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

    </RelativeLayout>

    <View
        android:id="@+id/centerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayoutBottom"
        android:layout_below="@+id/relativeLayoutHeader"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/relativeLayoutBodyLeft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="#FFFFFF">

                <RelativeLayout
                    android:id="@+id/relativeLayoutPreviewLeft"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#FFFFFF">



                    <RelativeLayout
                        android:id="@+id/relativeLayoutBodyRight"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:focusable="true"
                        android:forceHasOverlappingRendering="false">


                        <WebView
                            android:id="@+id/webViewMine"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:foregroundGravity="center"
                            android:visibility="gone" />

                        <VideoView
                            android:id="@+id/videoViewMine"
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:visibility="gone" />


                    </RelativeLayout>

                    <WebView
                        android:id="@+id/webViewContent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:foregroundGravity="center"
                        android:visibility="gone" />

                    <VideoView
                        android:id="@+id/videoViewContent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:foregroundGravity="center"
                        android:visibility="gone" />


                </RelativeLayout>

            </RelativeLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/backScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/try_again" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/buttonSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="@string/compare_switch_video" />

                <Button
                    android:id="@+id/buttonStartAllVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:background="#33CC66"
                    android:textColor="#FFFFFF"
                    android:layout_marginRight="@dimen/margin_right"
                    android:text="@string/compare_start_video" />
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayoutBottom"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="#E8E8E8"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/linearLayoutFooterStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/imageViewFooterView"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:srcCompat="@drawable/ic_sample_svg"
                />

            <TextView
                android:id="@+id/textViewFooterView"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/footer_view"
                android:textSize="12sp"
                android:textColor="#61B5Ab"
                android:textStyle="normal"
                />

            <ImageView
                android:id="@+id/imageViewFooterShoot"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:srcCompat="@drawable/ic_sample_svg"
                />

            <TextView
                android:id="@+id/textViewFooterShoot"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/footer_shoot"
                android:textSize="12sp"
                android:textColor="#61B5Ab"
                android:textStyle="normal"
                />

            <ImageView
                android:id="@+id/imageViewFooterCompare"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:srcCompat="@drawable/ic_sample_svg"
                />

            <TextView
                android:id="@+id/textViewFooterCompare"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/footer_compare"
                android:textSize="12sp"
                android:textColor="#61B5Ab"
                android:textStyle="normal"
                />

        </LinearLayout>

        <Button
            android:text="@string/select_shooting_method_submit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="16dp"
            android:textColor="#FFFFFF"
            android:background="#33CC66"
            android:id="@+id/buttonSubmit" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayoutOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
            android:background="#66000000"
            android:id="@+id/imageButtonReportSentClose" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="150dp"
            android:text="@string/report_sent"
            android:textSize="35sp"
            android:textColor="#FFFFFF" />

        <Button
            android:text="@string/report_sent_back"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="50dp"
            android:textColor="#808080"
            android:background="#FFFFFF"
            android:id="@+id/buttonReportSentBack" />

        <Button
            android:text="@string/report_sent_input_comment"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:layout_marginRight="100dp"
            android:textColor="#808080"
            android:background="#FFFFFF"
            android:id="@+id/buttonReportSentInputComment" />

    </RelativeLayout>


</RelativeLayout>
